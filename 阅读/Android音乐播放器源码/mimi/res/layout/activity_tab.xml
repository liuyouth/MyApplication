<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ba2"
    android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/img_background_post_pressed"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/player_id_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/player_btn_return_style"
                android:onClick="retyrn_player" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/view_vertical_line" />

            <TextView
                android:id="@+id/activity_tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5.0dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="19.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/context_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_bj"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/hosv_view1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hosv_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_local_music" />

                    <TextView
                        android:id="@+id/hosv_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hosv_view2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hosv_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_favorites" />

                    <TextView
                        android:id="@+id/hosv_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hosv_view3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hosv_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_folder_plus" />

                    <TextView
                        android:id="@+id/hosv_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hosv_view4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hosv_image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_artist_plus" />

                    <TextView
                        android:id="@+id/hosv_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="歌手"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hosv_view5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/hosv_image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_album_plus" />

                    <TextView
                        android:id="@+id/hosv_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="专辑"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/main_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tab_iv_album"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:clickable="true"
            android:onClick="toplayer"
            android:scaleType="centerCrop"
            android:src="@drawable/main_img_album" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tab_main_tv_artist"
                android:layout_width="match_parent"
                android:layout_height="20.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="3.0dip"
                android:paddingRight="1.0dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="11.0sp" />

            <TextView
                android:id="@+id/tab_main_tv_name"
                android:layout_width="match_parent"
                android:layout_height="20.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="3.0dip"
                android:paddingRight="1.0dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tab_main_tv_time"
                android:layout_width="match_parent"
                android:layout_height="20.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="3.0dip"
                android:paddingRight="1.0dip"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="11.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/tab_main_ib_previous"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/btn_bg_style"
                android:contentDescription="@string/app_name"
                android:onClick="shang"
                android:src="@drawable/main_btn_previous" />

            <ImageButton
                android:id="@+id/tab_main_ib_play"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="3.0dip"
                android:layout_marginRight="3.0dip"
                android:background="@drawable/btn_bg_style"
                android:contentDescription="@string/app_name"
                android:onClick="start"
                android:src="@drawable/main_btn_play" />

            <ImageButton
                android:id="@+id/tab_main_ib_next"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/btn_bg_style"
                android:contentDescription="@string/app_name"
                android:onClick="xia"
                android:src="@drawable/main_btn_next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>