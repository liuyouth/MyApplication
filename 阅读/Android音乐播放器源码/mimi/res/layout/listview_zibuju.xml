<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" 
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:id="@+id/listview_zibuju_head"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/listview_zibuju_true"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg_style" />

            <ImageView
                android:id="@+id/listview_zibuju_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/music_item_btn_favourite_normal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/listview_zibuju_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="1."
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/listview_zibuju_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="bottom"
                        android:singleLine="true"
                        android:text="测试标题1"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp" >

                    <TextView
                        android:id="@+id/listview_zibuju_artist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingRight="15.0dip"
                        android:singleLine="true"
                        android:text="测试艺术家"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/listview_zibuju_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:text="00:00"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/listview_zibuju_menu"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_bg_style"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:src="@drawable/music_item_btn_menu" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expandable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/zbj_bj"
        android:orientation="horizontal" >

       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="vertical">
           <ImageButton 
               android:id="@+id/zbj_sc"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@drawable/bj_sc"/>
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
                android:textSize="10dp"
               android:text="删除"/>
       </LinearLayout>
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
            android:gravity="center"
           android:orientation="vertical">
           <ImageButton 
               android:id="@+id/zbj_fx"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@drawable/bj_fx"/>
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
               android:textSize="10dp"
               android:text="分享歌曲"/>
       </LinearLayout>
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
            android:gravity="center"
           android:orientation="vertical">
           <ImageButton 
               android:id="@+id/zbj_xq"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@drawable/bj_xq"/>
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
               android:textSize="10dp"
               android:text="查看详情"/>
       </LinearLayout>
       <LinearLayout 
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
            android:gravity="center"
           android:orientation="vertical"
           android:clipChildren="true">
           <ImageButton 
               android:id="@+id/zbj_ls"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@drawable/bj_ls"/>
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
               android:textSize="10dp"
               android:text="设置铃声"/>
       </LinearLayout>

        
    </LinearLayout>

</LinearLayout>